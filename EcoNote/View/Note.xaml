        </Button>

        <Button Content="" HorizontalAlignment="Left" Height="180" Margin="587,103,0,0" VerticalAlignment="Top" Width="180" BorderBrush="White" RenderTransformOrigin="1.246,0.522" Grid.Row="1" Click="Button_Click4" >
            <Button.Background>
                <ImageBrush ImageSource="/이미지/걷기.png"/>
            </Button.Background>
        </Button>

        <Label Content="로 " HorizontalAlignment="Left" Height="39" Margin="289,345,0,0" VerticalAlignment="Top" Width="108" FontSize="18" Foreground="#FF060606" Grid.Row="1"/>
