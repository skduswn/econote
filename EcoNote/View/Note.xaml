        <Button Content="" HorizontalAlignment="Left" Height="58" Margin="663,334,0,0" VerticalAlignment="Top" Width="139" BorderBrush="White" RenderTransformOrigin="1.246,0.522" Grid.Row="1" Click="Button_Click_5" >
            <Button.Background>
                <ImageBrush ImageSource="/이미지/기록하기.png"/>
            </Button.Background>
        </Button>


    </Grid>
